<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>viewlayer.InitRAMContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>viewlayer.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testview</servlet-name>
        <jsp-file>/WEB-INF/views/testview.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>loginView</servlet-name>
        <jsp-file>/loginView.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>loggedIn</servlet-name>
        <jsp-file>/loggedIn.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>viewlayer.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VehicleController</servlet-name>
        <servlet-class>viewlayer.VehicleController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VehicleController</servlet-name>
        <url-pattern>/VehicleController</url-pattern>
    </servlet-mapping>
    <!-- Urls a client can request. Notice there is only one -->
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/Auth/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginView</servlet-name>
        <url-pattern>/loginView</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
